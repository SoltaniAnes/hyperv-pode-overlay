          },
          "root": {
            "type": "string"
          },
          "config": {
            "type": "object"
          }
        }
      },
      "VmCreateRequest": {
        "required": [
          "name",
          "memoryMB",
          "vcpu",
          "diskPath",
          "diskGB",
          "switchName"
        ],
        "properties": {
          "diskPath": {
            "type": "string",
            "description": "Disk path"
          },
          "memoryMB": {
            "type": "integer",
            "description": "Memory in MB"
          },
          "diskGB": {
            "type": "integer",
            "description": "Disk size in GB"
          },
          "vcpu": {
            "type": "integer",
            "description": "Number of vCPUs"
          },
          "isoPath": {
            "type": "string",
            "description": "ISO path (optional)"
          },
          "switchName": {
            "type": "string",
            "description": "Virtual switch name"
          },
          "name": {
            "type": "string",
            "description": "VM name"
          }
        },
        "type": "object"
      },
      "SwitchCreateRequest": {
        "required": [
          "name",
          "type"
        ],
        "properties": {
          "netAdapterName": {
            "type": "string",
            "description": "Network adapter name (required for External)"
          },
          "notes": {
            "type": "string",
            "description": "Optional notes"
          },
          "name": {
            "type": "string",
            "description": "Switch name"
          },
          "type": {
            "enum": [
              "Internal",
              "Private",
              "External"
            ],
            "description": "Switch type",
            "type": "string"
          }
        },
        "type": "object"
      },
      "Vm": {
        "type": "object",
        "properties": {
          "State": {
            "type": "string"
          },
          "MemoryAssigned": {
            "type": "integer"
          },
          "Uptime": {
            "type": "string"
          },
          "Name": {
            "type": "string"
          },
          "CPUUsage": {
            "type": "integer"
          }
        }
      },
      "Error": {
        "required": [
          "error"
        ],
        "properties": {
          "detail": {
            "type": "string",
            "description": "Optional technical message"
          },
          "error": {
            "type": "string",
            "description": "Human-readable error message"
          }
        },
        "type": "object"
      },
      "SwitchUpdateRequest": {
        "type": "object",
        "properties": {
          "notes": {
            "type": "string",
            "description": "Notes"
          }
        }
      },
      "VmUpdateRequest": {
        "type": "object",
        "properties": {
          "vcpu": {
            "type": "integer",
            "description": "Number of vCPUs"
          },
          "switchName": {
            "type": "string",
            "description": "Virtual switch name"
          },
          "memoryMB": {
            "type": "integer",
            "description": "Memory in MB"
          },
          "isoPath": {
            "type": "string",
            "description": "ISO path"
          }
        }
      },
      "VmActionResponse": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "suspended": {
            "type": "string"
          },
          "updated": {
            "type": "boolean"
          },
          "stopped": {
            "type": "string"
          },
          "created": {
            "type": "string"
          },
          "resumed": {
            "type": "string"
          },
          "deleted": {
            "type": "string"
          },
          "unchanged": {
            "type": "boolean"
          },
          "exists": {
            "type": "string"
          },
          "started": {
            "type": "string"
          },
          "restarted": {
            "type": "string"
          }
        }
      }
    }
  },
  "info": {
    "title": "Hyper-V API Overlay",
    "version": "1.0.0",
    "description": "REST API layer on top of Microsoft Hyper-V using PowerShell and Pode"
