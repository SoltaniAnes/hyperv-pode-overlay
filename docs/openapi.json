        "summary": "Stop a virtual machine",
        "parameters": [
          {
            "required": true,
            "in": "path",
            "schema": {
              "type": "string"
            },
            "name": "name",
            "description": "VM name"
          },
          {
            "required": false,
            "in": "query",
            "schema": {
              "type": "boolean"
            },
            "name": "force",
            "description": "Force stop if true"
          }
